{
  "icon": "line_style",
  "identifier": "split_encoding",
  "label": "Encodage échantillonné",
  "parameters": [
    {
      "id": "source_filename",
      "type": "string"
    }
  ],
  "start_parameters": [
    {
      "id": "source_filename",
      "label": "Source file",
      "type": "file"
    }
  ],
  "steps": [
    {
      "icon": "create_new_folder",
      "id": 0,
      "label": "Create work directory",
      "name": "job_transfer",
      "parameters": [
        {
          "id": "source_paths",
          "type": "array_of_templates",
          "value": [
            "{source_filename}"
          ]
        },
        {
          "id": "command_template",
          "type": "string",
          "value": "mkdir {directory}"
        },
        {
          "id": "directory",
          "type": "template",
          "value": "{work_directory}/{workflow_id}"
        }
      ]
    },
    {
      "icon": "file_download",
      "id": 1,
      "label": "Download source elements",
      "name": "job_transfer",
      "parameters": [
        {
          "id": "filename",
          "type": "template",
          "value": "{source_filename}"
        },
        {
          "id": "source_bucket",
          "type": "string",
          "value": "test"
        },
        {
          "id": "options",
          "type": "template",
          "value": "<%= # replace by custom options %>"
        },
        {
          "id": "command_template",
          "type": "string",
          "value": "aws s3 cp {options} s3://{source_bucket}/{filename} {destination_path}"
        },
        {
          "id": "destination_path",
          "type": "template",
          "value": "{work_directory}/{workflow_id}/{source_filename}"
        }
      ],
      "parent_ids": [
        0
      ],
      "required_to_start": [
        0
      ]
    },
    {
      "icon": "call_split",
      "id": 2,
      "label": "Split source file in segments",
      "name": "job_media_splitter",
      "parameters": [
        {
          "id": "segments",
          "type": "integer",
          "value": 1000
        },
        {
          "id": "segments_unit",
          "type": "string",
          "value": "milliseconds"
        },
        {
          "id": "output_parameter_name",
          "type": "string",
          "value": "media_segments"
        }
      ],
      "parent_ids": [
        1
      ],
      "required_to_start": [
        1
      ]
    },
    {
      "icon": "music_video",
      "id": 3,
      "label": "Transcode audio into WAV parts",
      "name": "job_ffmpeg",
      "multiple_jobs": "media_segments",
      "parameters": [
        {
          "id": "command_template",
          "type": "string",
          "value": "ffmpeg -i {source_path} -ss {start_index} -to {stop_index} -y -vn -codec:a pcm_s24le {output_path}"
        },
        {
          "id": "start_index",
          "type": "template",
          "value": "<%= sdk_start_index / 1000.0 %>"
        },
        {
          "id": "stop_index",
          "type": "template",
          "value": "<%= (sdk_stop_index + 1) / 1000.0 %>"
        },
        {
          "id": "output_path",
          "type": "template",
          "value": "{work_directory}/{workflow_id}/output-{sdk_start_index}-{sdk_stop_index}.wav"
        },
        {
          "id": "destination_path",
          "type": "template",
          "value": "{work_directory}/{workflow_id}/output-{sdk_start_index}-{sdk_stop_index}.wav"
        }
      ],
      "parent_ids": [
        2
      ],
      "required_to_start": [
        2
      ]
    },
    {
      "icon": "file_upload",
      "id": 4,
      "label": "Upload generated elements to S3",
      "name": "job_transfer",
      "parameters": [
        {
            "id": "input_filter",
            "type": "filter",
            "value": {"ends_with": [".wav"]}
        },
        {
          "id": "filename",
          "type": "template",
          "value": "{workflow_id}/<%= Path.basename(source_path) %>"
        },
        {
          "id": "destination_bucket",
          "type": "string",
          "value": "test"
        },
        {
          "id": "options",
          "type": "template",
          "value": "<%= # replace by custom options %>"
        },
        {
          "id": "command_template",
          "type": "string",
          "value": "aws s3 cp {options} {source_path} s3://{destination_bucket}/{filename}"
        }
      ],
      "parent_ids": [
        3
      ],
      "required_to_start": [
        3
      ]
    }
  ],
  "tags": [
    "francetélévisions"
  ],
  "version_major": 0,
  "version_micro": 1,
  "version_minor": 0
}
